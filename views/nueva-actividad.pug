extends layout
block contenido 
    .contenido-principal
        h1 #{nombrePaginas}
        if errores
            each error in errores
                .alerta = error.texto
            
        
        form.agregar-proyecto(action="/nueva-actividad" method="POST")
            .campo
                label(for="nombre") Nombre del Pryecto
                input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")